User ||--o{ Role : has
Role ||--o{ Permission : contains
User ||--|| Email : has
User ||--|| Username : has
User ||--|| Password : has
User ||--o{ RefreshToken : generates

UserDomainService ..> User : validates
AuthenticationDomainService ..> User : authenticates
RoleDomainService ..> User : manages
RoleDomainService ..> Role : validates

